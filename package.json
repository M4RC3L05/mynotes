{
  "name": "mynotes",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M4RC3L05/mynotes.git"
  },
  "scripts": {
    "android": "react-native run-android",
    "start": "react-native start",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint-staged": "lint-staged",
    "np": "np --no-publish --yolo --no-yarn --any-branch --message 'v%s'",
    "postversion": "auto-changelog && git add CHANGELOG.md && react-native-version --target android"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "simple-import-sort"
    ],
    "extends": [
      "xo",
      "xo-typescript",
      "xo-react",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/prefer-ts-expect-error": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "ignorePatterns": [
      "node_modules",
      "android"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "editorconfig": true,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "quoteProps": "consistent",
    "proseWrap": "preserve",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@gorhom/portal": "^1.0.14",
    "@react-native-async-storage/async-storage": "^1.17.7",
    "@react-navigation/native": "^6.0.11",
    "@react-navigation/native-stack": "^6.7.0",
    "marked": "^4.0.18",
    "react": "18.0.0",
    "react-native": "0.69.3",
    "react-native-safe-area-context": "^4.3.1",
    "react-native-scoped-storage": "^1.9.3",
    "react-native-screens": "^3.15.0",
    "react-native-system-navigation-bar": "^1.0.5",
    "react-native-vector-icons": "^9.2.0",
    "react-native-webview": "^11.23.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/runtime": "^7.12.5",
    "@tsconfig/react-native": "^2.0.2",
    "@types/marked": "^4.0.3",
    "@types/react-native": "^0.69.3",
    "@types/react-native-vector-icons": "^6.4.11",
    "@types/showdown": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-config-xo-typescript": "^0.52.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "np": "^7.6.2",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "react-native-version": "^4.0.0",
    "typescript": "^4.4.4"
  }
}
