{
  "name": "mynotes",
  "version": "0.2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M4RC3L05/mynotes.git"
  },
  "scripts": {
    "android": "react-native run-android",
    "start": "react-native start",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "lint-staged": "lint-staged",
    "version": "react-native-version --target android --never-amend && offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add ."
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "simple-import-sort"
    ],
    "extends": [
      "xo",
      "xo-typescript",
      "xo-react",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/prefer-ts-expect-error": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off"
    },
    "ignorePatterns": [
      "node_modules",
      "android"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "editorconfig": true,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "quoteProps": "consistent",
    "proseWrap": "preserve",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@gorhom/portal": "^1.0.14",
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-navigation/native": "^6.0.12",
    "@react-navigation/native-stack": "^6.8.0",
    "marked": "^4.1.0",
    "react": "18.1.0",
    "react-native": "0.70.1",
    "react-native-safe-area-context": "^4.3.3",
    "react-native-scoped-storage": "^1.9.3",
    "react-native-screens": "^3.17.0",
    "react-native-system-navigation-bar": "^2.0.0",
    "react-native-vector-icons": "^9.2.0",
    "react-native-webview": "^11.23.1",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/runtime": "^7.19.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/marked": "^4.0.7",
    "@types/react-native": "^0.69.5",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/showdown": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "metro-react-native-babel-preset": "^0.72.3",
    "offline-github-changelog": "^2.5.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "react-native-version": "^4.0.0",
    "typescript": "^4.8.3"
  }
}
